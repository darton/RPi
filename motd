#!/bin/bash

export TERM=xterm-256color

SENSOR_TEMP=$(/home/pi/scripts/RPiMS/redis-get.py | sed -e 's/Temp=//' -e 's/Humidity=//' |awk '{print $1}')
SENSOR_HUM=$(/home/pi/scripts/RPiMS/redis-get.py | sed -e 's/Temp=//' -e 's/Humidity=//' |awk '{print $2}')
CPU_TEMP=$(vcgencmd measure_temp|awk -F\= '{print $2}')

echo "$(tput setaf 2)
   .~~.   .~~.
  '. \ ' ' / .'$(tput setaf 1)
   .~ .~~~..~.
  : .~.'~'.~. :$(tput sgr0)  Raspberry Pi Monitoring System$(tput setaf 1)
 ~ (   ) (   ) ~
( : '~'.~.'~' : )Room Humidity.....: $SENSOR_HUM
 ~ .~ (   ) ~. ~ Room Temperature..: $SENSOR_TEMP
  (  : '~' :  )  CPU Temperature...: $CPU_TEMP
   '~ .~~~. ~'
       '~'
$(tput sgr0)"

echo
